@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>

<div class="jumbotron text-center">
    <h1 class="display-4 text-primary">Welcome to Walk and Trek Adventures</h1>
    <p class="lead text-muted">Embark on a vibrant journey of discovery and adventure with our guided walks and treks. Explore the beauty of nature, challenge yourself, and create unforgettable memories.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/walk-image.png" alt="Walking Adventure" class="img-fluid custom-img">
            <h2 class="mt-3 text-success">Discover the Joy of Walking</h2>
            <p class="text-muted">Experience the simple pleasure of walking in breathtaking landscapes. Our guided walks are suitable for all fitness levels, from leisurely strolls to challenging hikes.</p>
        </div>
        <div class="col-md-6">
            <img src="~/trek-image.jpg" alt="Trekking Expedition" class="img-fluid custom-img">
            <h2 class="mt-3 text-success">Conquer New Heights with Trekking</h2>
            <p class="text-muted">Embark on epic trekking adventures to conquer peaks and witness awe-inspiring views. Our experienced guides will lead you through diverse terrains and ensure a safe and thrilling journey.</p>
        </div>
    </div>
</div>

<div class="container text-center mt-5">
    <p class="lead text-info">Ready for your next adventure? Join us and experience the world on foot!</p>
    <a href="#" class="btn btn-primary btn-lg">Explore Our Tours</a>
</div>

<style>
    .custom-img {
        height: 300px; /* Adjust the height as needed */
        object-fit: cover; /* Preserve aspect ratio and cover the entire container */
    }
</style>

</body>
</html>
